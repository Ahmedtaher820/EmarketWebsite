doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1.0",description="Market website")
    block pagetitle
      title Dashboard
    link(rel="stylesheet" , href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet" , href="../css/all.min.css")
    link(rel="stylesheet" , href="css/dashboard.css")
  body
    .dashboard
      include pug/layout/dashboard/dashboardslider.pug
      div(class="right-box")            
        include pug/layout/dashboard/dashboardHeader.pug
        div(class="profile text-center")
          .container
            div(class="profile-img")
              img(src="assets/01_ Male Avatar Icon.jpg")
            h4(class="fs-4 user-name")
            ul(class="list-unstyle account-list mt-3")
              li(class="py-2 px-4 border active",data-type="account") Account
              li(class="py-2 px-4 border",data-type="password") Password
              li(class="py-2 px-4 border",data-type="address") Address
            div(class="acc account my-3 p-4 border shadow active")
              h3(class="fs-3 text-start mb-4") Account Setting
              from(class="text-start")
                .row
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="fname") First Name
                      input(type="text",class="form-control",id="fname")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="email") Email
                      input(type="text",class="form-control",id="email")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="company") Company Name
                      input(type="text",class="form-control",id="company")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="phone") Phone
                      input(type="text",class="form-control",id="phone")
                button(class="btn btn-dark mt-3 me-auto px-4 py-2",style="display:block") Save
            div(class="acc password mt-3 p-4 border shadow noactive")
              h3(class="fs-3 text-start mb-4") Password Setting
              from(class="text-start")
                .row
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="fname") Current Password
                      input(type="password",class="form-control",id="currpasword")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="lname") New Password
                      input(type="password",class="form-control",id="newPassword")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="confPassword") Confirm Password
                      input(type="password",class="form-control",id="confPassword")

                button(class="btn btn-dark mt-3 me-auto px-4 py-2",style="display:block") Save    
            div(class="acc address mt-3 p-4 border shadow noactive")
              h3(class="fs-3 text-start mb-4") Password Setting
              from(class="text-start")
                .row
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="addressone") Adress Line1
                      input(type="text",class="form-control",id="addressone")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="addresstwo") Adress Line1
                      input(type="text",class="form-control",id="addresstwo")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="city") City
                      input(type="text",class="form-control",id="city")
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="country") Country
                      include pug/layout/countrylist.pug
                  .col-md-6
                    div(class="account-inputs")
                      label(class="form-label",for="zip") Zip/Postcode
                      input(type="text",class="form-control",id="zip")
                button(class="btn btn-dark mt-3 me-auto px-4 py-2",style="display:block") Save    
    script(src="js/dashboard.js")