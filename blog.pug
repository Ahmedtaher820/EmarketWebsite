doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1.0",description="Market website")
    block pagetitle
      title Blog
    include pug/stylelink
    block stylefile
      link(rel="stylesheet" , href="css/blog.css")
  body
    include pug/layout/smallheader.pug 
    include pug/layout/header.pug
    include pug/layout/bigheader.pug
    div(class="blog") 
      .container
        nav(class="my-4")
          ol(class="breadcrumb")
            li(class="breadcrumb-item  ")
              a(href="index.html",class="text-dark text-decoration-none") HOME
            li(class="breadcrumb-item active")
              a(href="blog.html",class="text-dark") BLOG
        div(class="blog-content my-3")
          a(class="sidebar border px-3 py-1 pointer mb-3 d-block d-lg-none text-decoration-none",data-bs-toggle="offcanvas",data-bs-target="#offcanvasExample",aria-controls="offcanvasExample")
            i(class="fa-solid fa-bars me-3 text-secondary ")
            span(class="text-secondary") SIDEBAR
          .row
            div(class="col-lg-3 d-none d-lg-block sidebar-box")
              div(class="rece-posts my-4 border")
                div(class="post-head d-flex align-items-center gap-2 p-2 border-bottom")
                  i(class="fa-solid fa-file-lines maincolor")  
                  h5(class="fs-5 mb-0") RECENT POSTS
                div(class="post-body p-3")
                  div(class="sm-post d-flex gap-2 mb-4")
                    img(src="../../assets/user1.jpg",alt="")
                    div(class="sm-post-body")
                      h6(class="fs-6 pointer") Integer enim purus
                      i(class="fa-solid fa-calendar me-1")
                      span 4th Jun 2018 
                  div(class="sm-post d-flex gap-2 mb-4")
                    img(src="../../assets/user2.jpg",alt="")
                    div(class="sm-post-body")
                      h6(class="fs-6 pointer") Integer enim purus
                      i(class="fa-solid fa-calendar me-1")
                      span 4th Jun 2018 
                  div(class="sm-post d-flex gap-2 mb-4")
                    img(src="../../assets/user3.jpg",alt="")
                    div(class="sm-post-body")
                      h6(class="fs-6 pointer") Integer enim purus
                      i(class="fa-solid fa-calendar me-1")
                      span 4th Jun 2018 
                  div(class="sm-post d-flex gap-2 mb-4")
                    img(src="../../assets/user4.jpg",alt="")
                    div(class="sm-post-body")
                      h6(class="fs-6 pointer") Integer enim purus
                      i(class="fa-solid fa-calendar me-1")
                      span 4th Jun 2018
                  div(class="sm-post d-flex gap-2 mb-4")
                    img(src="../../assets/user5.jpg",alt="")
                    div(class="sm-post-body")
                      h6(class="fs-6 pointer") Integer enim purus
                      i(class="fa-solid fa-calendar me-1")
                      span 4th Jun 2018       
              div(class="tags border mb-5")
                div(class="tag-head p-2 px-3 border-bottom d-flex align-items-center ")
                  i(class="fa-solid fa-pen me-2 maincolor")
                  h5(class="fs-5 mb-0") POPULAR TAGS
                div(class="tag-body px-3 pt-3 pb-5")
                  span(class="me-2 rounded-pill px-2 py-1 pointer") #Blog
                  span(class="me-2 rounded-pill px-2 py-1 pointer") #SEO
                  div
                    img(src="../../assets/fashion-img.jpg",class="pointer")
            .col-md-9
              div(class="ps-3 posts")
                div(class="post-header d-flex gap-3 align-items-center")
                  span VIEW AS: 
                  ul(class="list-unstyled")
                    li(class="d-inline-block pointer active")
                      i(class="fa-solid fa-table-cells-large")
                    li(class="d-inline-block pointer")
                      i(class="fa-solid fa-bars")  
              div(class="posts-boxes mt-5")      
              .row
                .col-md-3
                  div(class="p-box")
                    div(class="box-img")
                      img(src="../../assets/user1.jpg",alt="",class="img-fluid")
                    div(class="p-content d-flex flex-column gap-2")  
                      h6(class="fs-6") integer enim purus
                      div(class="member-info d-flex gap-3 align-items-center")
                        div(class="info-1 d-flex align-items-center")
                          i(class="fa-solid fa-user me-2")
                          span Ahmed
                        div(class="info-2 d-flex align-items-center")  
                          i(class="fa-solid fa-clock me-2")
                          span 2/2/2002
                .col-md-3      
                  div(class="p-box")
                    div(class="box-img")
                      img(src="../../assets/user1.jpg",alt="",class="img-fluid")
                    div(class="p-content d-flex flex-column gap-2")  
                      h6(class="fs-6") integer enim purus
                      div(class="member-info d-flex gap-3 align-items-center")
                        div(class="info-1 d-flex align-items-center")
                          i(class="fa-solid fa-user me-2")
                          span Ahmed
                        div(class="info-2 d-flex align-items-center")  
                          i(class="fa-solid fa-clock me-2")
                          span 2/2/2005        
     

